<div class="page-container tertiary">
  <div class="padded-container">
    <div class="heading">Update <%= @organization.name %></div>
    <%= form_for @organization do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: "Joe's Donuts" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "What's your organization's purpose? What do you want your members to strive for?" %>
    </div>

    <div class="field">
      <%= f.label :logo %>
      <%= f.text_field :logo, placeholder: "A link to your organization logo" %>
    </div>

    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.telephone_field :phone_number, autocomplete: "phone", placeholder: "What's a good number to reach you? No dashes or parentheses, just numbers please." %>
    </div>

    <div class="actions">
      <%= f.submit "Submit Changes", class: "primary-button" %>
    </div>

    <% end %>

  </div>
</div>

