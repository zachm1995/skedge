<div class="page-container">
  <div class="padded-container">
    <div class="body">Submitted by: <%= User.find(@swap_request.requesting_user_id).full_name %></div>
    <div class="body"><%= Timeperiod.find(@swap_request.timeperiod_id).start_time.strftime("%b %e")+ " " + "#{Timeperiod.find(@swap_request.timeperiod_id).start_time.strftime("%l:%M%P")}" + " to " + "#{Timeperiod.find(@swap_request.timeperiod_id).end_time.strftime("%l:%M%P")}" %></div>
    <div class="body">Status: <%= @swap_request.status %></div>
  </div>
  <div class="padded-container">
    <% if @swap_request.status == "submitted" %>
    <%= link_to "Take shift", claim_shift_path(@swap_request), class: "primary-button" %>
    <% end %>
    <% if logged_in?(:business_manager) %>
    <% if @swap_request.status == "waiting_approval" %>
    <%= link_to "Approve", approve_swap_path(@swap_request), class: 'primary-button' %>
    <% end %>
    <% end %>
  </div>
</div>
