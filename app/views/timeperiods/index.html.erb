<div class="page-container">
  <div class="padded-container tertiary">
    <div class="heading">Your Upcoming Shifts</div>
    <% if @timeperiods.count == 0 %>
    <div class="heading">You have nothing on your schedule</div>
    <% end %>
    <% @timeperiods.each do |this| %>
    <%= link_to timeperiod_path(this) do %>
    <div class="timecard">
      <% if logged_in?(:business_manager) %>
      <div class="body"><%= this.user.full_name %></div>
      <% end %>
      <div class="body"><%= this.start_time.strftime("%b %e") %></div>
      <div class="body"><%= this.start_time.strftime("%l:%M%P") %> â€” <%= this.end_time.strftime("%l:%M%P") %></div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
